{
  "manifest_version": 2,
  "name": "Textarea Length Logger",
  "version": "1.0.0",
  "description": "Logs the length of the text in the active textarea field to the console.",
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Textarea Length Logger"
  }
}
